<Window x:Class="hideimg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="hideit" Height="470" Width="308">
    <Grid>
        <Border BorderThickness="1" BorderBrush="#FF000000" HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="272">
            <Image Name="image" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill"/>
        </Border>
        <Button Name="zaladuj" Content="Wybierz obraz" HorizontalAlignment="Left" Height="35" Margin="80,165,0,0" VerticalAlignment="Top" Width="127" Click="zaladuj_Click"/>
        <TextBox Name ="tekst" HorizontalAlignment="Left" Height="180" Margin="10,205,0,0" TextWrapping="Wrap" Text="Tutaj wpisz tekst do ukrycia" VerticalAlignment="Top" Width="272"/>
        <Button Name="szyfruj" Content="Ukryj" HorizontalAlignment="Left" Height="33" Margin="10,390,0,0" VerticalAlignment="Top" Width="100" Click="szyfruj_Click"/>
        <Button Name="deszyfruj" Content="Odczytaj" HorizontalAlignment="Left" Height="33" Margin="182,390,0,0" VerticalAlignment="Top" Width="100" Click="deszyfruj_Click"/>
        <TextBlock Name="pomoc" HorizontalAlignment="Center" Height="50" Margin="2,375,0,0" FontSize="40" Width="20" TextWrapping="Wrap" Text="?" VerticalAlignment="Top" PreviewMouseDown="pomoc_PreviewMouseDown"/>

    </Grid>
</Window>
